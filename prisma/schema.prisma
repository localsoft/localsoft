// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url = "file:../localsoft.sqlite"
  // url      = env("file:./dev.db")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  hash      String
  createdAt DateTime @default(now())

  @@index([email])
}
